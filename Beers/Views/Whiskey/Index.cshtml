@model Drinks.ViewModels.WhiskeyIndexViewModel

@{
    ViewBag.Title = "List of Whiskies";
}

<table>
    @foreach (var whiskey in Model.Whiskies)
    {
        <tr>
            <td>ID: @whiskey.Id</td>
        </tr>
        <tr>
            <td>Name: @whiskey.Name</td>
        </tr>
        <tr>
            <td>Type: @whiskey.Type</td>
        </tr>
        <tr>
            <td><a asp-action="Details" asp-route-id="@whiskey.Id">Details</a></td>
        </tr>
    }
</table>
<a asp-action="Create">Add a Whiskey to the list</a>